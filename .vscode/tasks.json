{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "go",
      "args": ["build", "./..."],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/temporex"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "go",
      "args": ["run", "."],
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}/temporex"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/temporex"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "go",
      "args": ["clean", "-cache", "-testcache", "-modcache"],
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}/temporex"
      }
    }
  ]
}
